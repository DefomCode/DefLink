<Page x:Class="DefLink.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <StackPanel Margin="20">
        <TextBox x:Name="LoginTextBox" Text="Логин" GotFocus="LoginTextBox_GotFocus" LostFocus="LoginTextBox_LostFocus" Foreground="Gray"/>
        <PasswordBox x:Name="PasswordTextBox" Password="Пароль" GotFocus="PasswordTextBox_GotFocus" LostFocus="PasswordTextBox_LostFocus"/>
        <Button Content="Войти" Click="LoginButton_Click" />
        <Button Content="Зарегистрироваться" Click="RegisterButton_Click" />
    </StackPanel>
</Page>
